{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "declarationDir": "./dist/cjs",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "types": ["node"],
    "lib": ["ESNext"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "jest.cjs.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/utils-test/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.cjs.spec.json"
    }
  ]
}
