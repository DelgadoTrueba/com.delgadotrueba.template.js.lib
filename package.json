{
  "name": "@delgadotrueba/template-ts",
  "version": "0.0.2",
  "description": "Description",
  "keywords": [
    "template-ts",
    "template-typescript"
  ],
  "license": "MIT",
  "author": {
    "name": "delgadotrueba",
    "email": "delgadotrueba@pobox.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/delgadotrueba/template-js"
  },
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:mjs && pnpm run postbuild",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "postbuild": "node ./scripts/copy-package-json.js",
    "typecheck": "pnpm run typecheck:mjs && pnpm run typecheck:cjs",
    "typecheck:mjs": "tsc -p tsconfig.mjs.json --noEmit",
    "typecheck:cjs": "tsc -p tsconfig.cjs.json --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "pnpm exec eslint -c eslint.config.ts && pnpm run format && pnpm run typecheck",
    "lint:fix": "pnpm exec eslint -c eslint.config.ts && pnpm run format:fix",
    "test": "jest --projects jest.cjs.config.js jest.mjs.config.js --verbose",
    "test:cjs": "jest -c jest.cjs.config.js --verbose",
    "test:mjs": "jest -c jest.mjs.config.js --verbose",
    "test:coverage": "jest --projects jest.cjs.config.js jest.mjs.config.js --coverage",
    "prepare": "husky",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "20.0.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.36.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.5.2",
    "commitlint": "20.0.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "jest-environment-jsdom": "30.1.2",
    "jest-environment-node": "30.1.2",
    "lint-staged": "16.2.1",
    "prettier": "3.6.2",
    "ts-jest": "29.4.4",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1"
  },
  "dependencies": {
    "tslib": "2.8.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/esm/src/index.js",
  "module": "./dist/mjs/src/index.js",
  "types": "./dist/mjs/src/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/esm/src/index.js",
        "types": "./dist/esm/src/index.d.ts"
      },
      "import": {
        "default": "./dist/mjs/src/index.js",
        "types": "./dist/mjs/src/index.d.ts"
      }
    },
    "./public-api": {
      "require": {
        "default": "./dist/esm/src/public-api.js",
        "types": "./dist/esm/src/public-api.d.ts"
      },
      "import": {
        "default": "./dist/mjs/src/public-api.js",
        "types": "./dist/mjs/src/public-api.d.ts"
      }
    }
  },
  "sideEffects": false
}
